<%= render 'layouts/top_bar' %>
<br/>

<script>
    $(document).ready(function () {
        email_text_elem = $('#email_text');
        email_text_elem.html(email_text_elem.text().replace(/\n\r?/g, '<br />'));
        console.log(email_text_elem.text());
    });
</script>

<div class="row">
  <ul class="button-group round">
    <% unless @email.sent %>
        <li><%= link_to 'Reply', reply_email_path, :class => 'button' %></li>
        <% unless @email.archived %>
            <li><%= link_to 'Archive', archive_email_path, {:class => 'button'} %></li>
        <% end %>
    <% end %>
  </ul>
</div>

<div class="row">
  <p>
    <strong>Date:</strong>
    <%= @email.friendly_date %>
  </p>
</div>

<div class="row">
  <p>
    <% if @email.sent %>
        <strong>To:</strong>
        <%= @email.to %>
    <% else %>
        <strong>From:</strong>
        <%= @email.from %>
    <% end %>
  </p>
</div>

<div class="row">
  <p>
    <strong>Subject:</strong>
    <%= @email.subject %>
  </p>
</div>

<div class="row">
  <p id="email_text">
    <%= raw @email.text(:show_warnings => true) %>
  </p>
</div>


