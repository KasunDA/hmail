<script>
    $(document).ready(function () {
        email_text_elem = $('#email_text');
        email_text_elem.html(email_text_elem.text().replace(/\n\r?/g, '<br />'));
        console.log(email_text_elem.text());
    });
</script>

<div role="main" class="ui-content">
  <% unless @email.archived || @email.sent %>
      <%= link_to 'Archive', archive_email_path(@email), :class => 'ui-btn ui-btn-inline ui-corner-all' %>
  <% end %>

  <p>
    <strong>Date:</strong>
    <%= @email.friendly_date %>
  </p>

  <p>
    <% if @email.sent %>
        <strong>To:</strong>
        <%= @email.to %>
    <% else %>
        <strong>From:</strong>
        <%= @email.from %>
    <% end %>
  </p>

  <p>
    <strong>Subject:</strong>
    <%= @email.subject %>
  </p>

  <p id="email_text">
    <%= @email.text %>
  </p>

</div>

