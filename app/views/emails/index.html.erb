<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="jquery.dataTables.min.css">

<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="jquery.dataTables.min.js"></script>

<script>
    $(document).ready( function () {
        $('#emails_table').DataTable();
    } );
</script>

<p id="notice"><%= notice %></p>

<h1>My Emails</h1>

<table id="emails_table">
  <thead>
    <tr>
      <th>From</th>
      <th>Subject</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.from %></td>
        <td><%= email.subject %></td>
        <td><%= link_to 'Show', email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Refresh', refresh_emails_path %>
